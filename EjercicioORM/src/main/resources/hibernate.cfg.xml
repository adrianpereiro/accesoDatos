  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ejercicioorm</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.connection.username">root</property>
  <mapping resource="modelo/entidades/mapeo/Autor.hbm.xml"/>
  <mapping resource="modelo/entidades/mapeo/Contactousuario.hbm.xml"/>
  <mapping resource="modelo/entidades/mapeo/Ejemplar.hbm.xml"/>
  <mapping resource="modelo/entidades/mapeo/Libro.hbm.xml"/>
  <mapping resource="modelo/entidades/mapeo/Prestamo.hbm.xml"/>
